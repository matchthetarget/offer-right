<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Bought Items

    <a data-toggle="collapse" href="#user_bought_items_new_form">
      Add item
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.bought_items.each do |item| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to item, item %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_bought_items_new_form">
        <%= render partial: "users/user_bought_items_new_form" %>
      </div>
    </div>

  </ul>
</div>
