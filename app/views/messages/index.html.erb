<div class="row mb-3">
  <div class="col-md-12">
    <h1 class="display-4">
      Messages

      <%= link_to new_message_path, class: "btn btn-lg btn-outline-secondary" do %>
        <i class="fas fa-plus fa-fw"></i>
      <% end %>
    </h1>
  </div>
</div>


<div class="row justify-content-center mb-3">
  <div class="col-md-10">
    <ul class="list-group list-group-flush">
      <% current_user.interested_items.each do |item| %>
        <li class="list-group-item"><%= link_to item.title, item  %></li>
      <% end %>
    </ul>
  </div>
</div>
