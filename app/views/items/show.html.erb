<div class="row justify-content-center mb-3">
  <div class="col-md-8">
    <%= render object: @item, partial: "card", as: :item %>
  </div>
</div>

<% if @item.buyer.blank? %>
<div class="row justify-content-center mb-3">
  <div class="col-md-8">
    <%= render partial: "items/item_messages" %>
  </div>
</div>
<% end %>

<div class="row justify-content-center mb-3">
  <div class="col-md-8 text-center">
    <%= link_to "Back to listings", items_path %>
  </div>
</div>
